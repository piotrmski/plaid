{
  "name": "plaid",
  "productName": "Plaid",
  "version": "1.0.1",
  "author": {
    "name": "Piotr Marczy≈Ñski",
    "email": "piotmski@gmail.com"
  },
  "description": "Personal Jira worklog editor",
  "keywords": [
    "jira",
    "worklog",
    "planner",
    "calendar"
  ],
  "license": "MIT",
  "homepage": "https://github.com/piotrmski/plaid",
  "main": "main.js",
  "build": {
    "appId": "com.github.piotrmski.plaid",
    "files": [
      "main.js",
      "bootstrap.js",
      "window-state.js",
      "build"
    ],
    "win": {
      "icon": "build/assets/appicon/icon.ico",
      "extraFiles": [
        {
          "from": "src/assets/Plaid.VisualElementsManifest.xml",
          "to": "Plaid.VisualElementsManifest.xml"
        }
      ],
      "publish": [
        "github"
      ]
    },
    "linux": {
      "icon": "assets/appicon/icon.png"
    },
    "mac": {
      "icon": "assets/appicon/icon.icns"
    }
  },
  "scripts": {
    "ng": "ng",
    "serve-dev": "ng serve --port 4300",
    "start-dev": "electron main-dev.js",
    "start": "electron main.js",
    "build": "ng build --prod",
    "package": "electron-builder",
    "publish": "electron-builder --publish always",
    "lint": "ng lint"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^11.2.3",
    "@angular/common": "^11.2.3",
    "@angular/compiler": "^11.2.3",
    "@angular/core": "^11.2.3",
    "@angular/forms": "^11.2.3",
    "@angular/platform-browser": "^11.2.3",
    "@angular/platform-browser-dynamic": "^11.2.3",
    "@angular/router": "^11.2.3",
    "@openfonts/comfortaa_latin": "^1.44.4",
    "@openfonts/source-sans-pro_all": "^1.44.2",
    "electron-updater": "^4.3.5",
    "ngx-electron": "~2.2.0",
    "rxjs": "^6.6.6",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.0.4",
    "@angular/cli": "^11.2.2",
    "@angular/compiler-cli": "^11.2.3",
    "@angular/language-service": "^11.2.3",
    "@types/node": "^12.20.4",
    "codelyzer": "^6.0.0",
    "electron": "^11.5.0",
    "electron-builder": "^22.9.1",
    "ts-node": "~8.10.2",
    "tslint": "~6.1.0",
    "typescript": "^4.1.5"
  }
}
